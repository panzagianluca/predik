{
  "name": "predik-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/app",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:app": "npm run dev --workspace=apps/app",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=apps/web",
    "build:app": "npm run build --workspace=apps/app",
    "build:admin": "npm run build --workspace=apps/admin",
    "lint": "npm run lint --workspaces",
    "db:generate": "npm run db:generate --workspace=packages/database",
    "db:migrate": "npm run db:migrate --workspace=packages/database",
    "db:studio": "npm run db:studio --workspace=packages/database"
  },
  "dependencies": {
    "@radix-ui/react-navigation-menu": "^1.2.14"
  }
}
